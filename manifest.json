{
    "manifest_version": 3,
    "name": "Screen Recorder",
    "version": "1.0",
    "description": "Record your screen and save it as a video file.",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "display-capture",
        "microphone"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.jpeg"
    },
    "icons": {
        "16": "icon.jpeg",
        "48": "icon.jpeg",
        "128": "icon.jpeg"
    }
}